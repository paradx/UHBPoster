% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=UHBBlue}

% Headline
\setbeamercolor{headline}{fg=white,bg=UHBDarkRed}
\setbeamercolor{headline rule}{bg=UHBLightRed}

% Block
\setbeamercolor{block title}{fg=UHBBlue,bg=white}
\setbeamercolor{block separator}{bg=UHBLightBlue}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=UHBBlue,bg=UHBLightRed}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=UHBLightRed}

